{
  "name": "tdd-todo-api",
  "version": "1.0.0",
  "description": "Test Driven Todo API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "definition-swagger-test": "mocha --timeout 0 --exit test/todo.swagger-definition.test.js",
    "unit-test": "node_modules/.bin/nyc --reporter=lcov mocha --timeout 0 test/todo.unit.test.js",
    "integration-test": "mocha --timeout 0 --exit test/todo.integration.test.js",
    "integration-swagger-test": "mocha --timeout 0 --exit test/todo.swagger.test.js",
    "bdd-test": "./node_modules/.bin/cucumber-js --exit ./bdd/features/ -r ./bdd/steps/"
  },
  "bin": {
    "codecov": "./bin/codecov"
  },
  "keywords": [
    "Swagger",
    "Nodejs",
    "Express",
    "MongoDB",
    "Mocha",
    "TDD",
    "BDD",
    "cucumber",
    "k6",
    "Chai"
  ],
  "author": "Omar del Valle",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "js-yaml": "^4.1.0",
    "jsonschema": "^1.4.0",
    "method-override": "^2.3.10",
    "mongoose": "^4.13.21",
    "morgan": "^1.10.0",
    "opbeat": "^3.6.6"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.2.1",
    "@types/body-parser": "^1.19.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "cucumber-html-reporter": "^5.4.0",
    "driven-swagger-test": "^1.2.1",
    "grunt": "^0.4.5",
    "grunt-env": "^0.4.4",
    "grunt-environmental": "^0.1.5",
    "grunt-nodemon": "^0.4.1",
    "grunt-simple-mocha": "^0.4.1",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "nyc": "^15.1.0",
    "should": "^8.2.2",
    "sinon": "^1.17.3",
    "sinon-as-promised": "^4.0.3",
    "sinon-chai": "^3.6.0",
    "sinon-express-mock": "^2.2.1",
    "supertest": "^1.2.0"
  }
}
